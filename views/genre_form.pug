extend layout 

block content 

  h1 #{title}

  form(method='POST' action='')
    div.form-group
      lable(for='name') Genre: 
      input#name.form-control(type='text' 
        placeholder='Fantacy, Poety, etc.' name='name'  
        value=(genre===underfined? '' : genre.name) required='true')
      button.btn.btn-primary(type='submit') Submit

  if errors 
    ul  
      for error in errors 
        li!= error.msg